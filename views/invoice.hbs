<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Create Invoice</title>
    <style>
      input, select { margin: 5px; padding: 4px; } table { width: 100%;
      border-collapse: collapse; margin-top: 20px; } th, td { border: 1px solid
      #ccc; padding: 8px; text-align: center; }
    </style>
  </head>
  <body>
    <h2>Create Invoice</h2>
    <button id="btnInvoiceDelete" style="margin-left:20% ;">Delete</button>
    <form id="invoiceForm">
      <label>Customer Name:
        <input type="text" id="strCustName" name="strName" required /></label>
      <label>Email:
        <input
          type="email"
          id="strCustEmail"
          name="strEmail"
          required
        /></label><br />
      <label>Invoice No:
        <input
          type="text"
          id="strInvoiceNo"
          name="strInvoiceNo"
          required
        /></label>
      <label>Document Date:
        <input type="date" id="datDocument" name="doc_date" required /></label>
      <label>Due Date: <input type="date" id="datDue" name="due_date" /></label>

      <table id="invoiceTable">
        <thead>
          <tr>
            <th>Item Name</th>
            <th>Qty</th>
            <th>Unit Price</th>
            <th>Tax %</th>
            <th>Total</th>
            <th><button type="button" onclick="addRow()">Ôºã</button></th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><input type="text" id="strItemName" name="desc[]" /></td>
            <td><input
                type="number"
                name="qty[]"
                value="1"
                onchange="calculateTotal()"
              /></td>
            <td><input
                type="number"
                name="price[]"
                value="0"
                onchange="calculateTotal()"
              /></td>
            <td><input
                type="number"
                name="tax[]"
                value="0"
                onchange="calculateTotal()"
              /></td>
            <td><input type="text" name="total[]" readonly /></td>
            <td><button type="button" onclick="removeRow(this)">üóëÔ∏è</button></td>
          </tr>
        </tbody>
      </table>

      <label>Discount (%):
        <input
          type="number"
          id="discount"
          value="0"
          onchange="calculateTotal()"
        /></label><br />
      <label>Note:
        <textarea name="note" rows="3" cols="50"></textarea></label><br />

      <h3>Subtotal: ‚Çπ<span id="subtotal">0</span></h3>
      <h3>Total Tax: ‚Çπ<span id="tax_total">0</span></h3>
      <h3>Discount: ‚Çπ<span id="discount_value">0</span></h3>
      <h2>Grand Total: ‚Çπ<span id="grand_total">0</span></h2>

      <button type="button" onclick="saveInvoice()" id="invoiceSubmission">Save
        Invoice</button>
    </form>

  </body>
</html>